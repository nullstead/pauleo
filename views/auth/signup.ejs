<html lang="en">

<!--head-->
<%- include('../partials/head.ejs') %>

<body id="login">

    <!--nav-->
    <nav class="navbar  bg-dark navbar-dark sticky-top">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">
          <img src="/img/logo.png" alt="Avatar Logo" style="width:150px;" class="rounded-pill">
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
          <ul id="nav-links" class="navbar-nav ">
            <li class="nav-item">
              <a class="nav-link text-warning" href="/">Home</a>
            </li>
            
                <li class="nav-item">
                  <a class="nav-link" href="/auth/login">Log In</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/auth/signup">Sign Up</a> 
                </li>
  
            <li class="nav-item">
              <a class="nav-link " href="/about">About</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <% if (emailMsg) { %>
      <div style="width: fit-content; margin: auto;" id="flash" class="alert alert-success alert-dismissible fade show">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        <%= emailMsg %>
    </div>
    <% } %>

      <main class="mt-5 pt-5">
        <%= // `Username: ${User.username}, Password: ${User.password}` %>
        <div>
            <h5>Sign Up</h5>
        </div>
        <div>
          <form action="/auth/register" method="post">
            <div class="form-floating mb-3 mt-3">
              <input type="text" class="form-control" id="username" placeholder="Enter username" name="username" required>
              <label for="email">Username</label>
              <p style="color: red;"><%-msg %> </p>
            </div>

            <div class="form-floating mb-3 mt-3">
              <input type="text" class="form-control" id="email" placeholder="Enter email" name="email" required>
              <label for="email">Email</label>
              <p style="color: red;"><%-msg2 %> </p>
            </div>
            
            <div class="form-floating mt-3 mb-3">
              <input type="password" class="form-control" id="pwd" placeholder="Enter password" name="password" required>
              <label for="pwd">Password</label>
            </div>

            <div class="pb-2">
              <input  type="checkbox" id="togglePassword"> Show Password
            </div>

            <div class="d-flex justify-content-between align-items-center pt-2">
              <div class="">
                <button type="submit" class="btn btn-dark">Sign up</button>
              </div>
              <div>
                Already registered? <a href="/auth/login">Login!</a>
              </div>
            </div>
          </form>
        </div>
      </main>


      <!--footer-->
      

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
      $('#togglePassword').on('change', function(){
               // Check if the checkbox is checked
               if ($(this).is(':checked')) {
                   // Change the input type to text to show the password
                   $('#pwd').attr('type', 'text');
               } else {
                   // Change the input type back to password to hide the password
                   $('#pwd').attr('type', 'password');
               }
           });
   </script>

</body>
</html>